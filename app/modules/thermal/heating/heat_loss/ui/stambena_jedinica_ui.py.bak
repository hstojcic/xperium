                    st.caption(f"Opis: {stambena_jedinica.opis}")
            
            with col2:
                prostorije = self.model.dohvati_prostorije_za_stambenu_jedinicu(stambena_jedinica.id)
                st.metric("Prostorije", len(prostorije))
